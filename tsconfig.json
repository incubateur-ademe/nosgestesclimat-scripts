{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "source",
    "types": ["node"],
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["es2022"],
    "sourceMap": true,
    "declaration": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["source/**/*.ts"],
  "exclude": ["./node_modules/", "./dist/"]
}
